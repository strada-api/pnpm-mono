{
  "compilerOptions": {
    // Base Options
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": false,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Transpiling with TS
    "module": "ESNext",
    "outDir": "dist",

    // Emit TS declaration
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true
  }
}
